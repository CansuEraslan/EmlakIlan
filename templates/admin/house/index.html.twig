{% extends 'adminbase.html.twig' %}

{% block title %}House index{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL, windowName, windowFeatures){ window.open(windowURL, windowName, windowFeatures);}
    </SCRIPT>
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i>House List</h3>
            <div class="row mt">
                <div class="col-auto">
                    <div class="col-auto">
                        <a href="{{ path('admin_house_new') }}"><button type="button" class="btn btn-theme03">Create new</button></a>
                    </div>
                    <table class="table table-striped table-advance table-hover">

                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Category</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th>M2</th>
                            <th>Kat</th>
                            <th>Oda</th>
                            <th>Banyo</th>
                            <th>Mutfak</th>

                            <th>Phone</th>
                            <th>Email</th>
                            <th>Price</th>
                            <th>City</th>
                            <th>User</th>
                            <th>I.Gallery</th>
                            <th>Status</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for house in houses %}
                            <tr>
                                <td>{{ house.id }}</td>
                                <td>{{ house.catname }}</td>
                                <td>{{ house.title }}</td>
                                <td><img src="{{asset('uploads/images/'~house.image )}}" height="40"></td>
                                <td>{{ house.m2 }}</td>
                                <td>{{ house.kat }}</td>
                                <td>{{ house.oda }}</td>
                                <td>{{ house.banyo }}</td>
                                <td>{{ house.mutfak }}</td>

                                <td>{{ house.phone }}</td>
                                <td>{{ house.email }}</td>
                                <td>{{ house.price }}</td>
                                <td>{{ house.city }}</td>
                                <td> <a href="{{ path('admin_user_show',{'id':house.userid}) }}">
                                    {{ house.name }}{{ house.surname }}</td></a>

                                <td>
                                    <a href="javascript:openWin('{{ path('admin_image_new',{'id':house.id}) }}','','toolbar=no,location=no,directories=0,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                        <img src="{{ asset('assets/admin/img') }}/gallery.png" height="40">
                                    </a>
                                </td>

                                <td>{{ house.status }}</td>

                                <td>
                                    <a href="{{ path('admin_house_show', {'id': house.id}) }}"><button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button></a>
                                </td>
                                <td>
                                    <a href="{{ path('admin_house_edit', {'id': house.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                </td>


                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="22">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
    </div>
{% endblock %}
