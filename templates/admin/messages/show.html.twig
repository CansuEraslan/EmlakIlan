{% extends 'adminbase.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
<section id="main-content" xmlns="http://www.w3.org/1999/html">
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i> Show Messages Page</h3>
        <div class="row mt">
            <div class="col-lg-12">
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ message.status }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ message.ip }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ message.note }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_messages_index') }}"><button type="button" class="btn btn-theme02">Back to list</button></a>

    <a href="{{ path('admin_messages_edit', {'id': message.id}) }}"><button type="button" class="btn btn-theme03">Edit </button></a>

    {{ include('admin/messages/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
    <!-- /wrapper -->
</section>
    </div>
{% endblock %}
