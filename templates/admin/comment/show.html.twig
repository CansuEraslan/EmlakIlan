{% extends 'adminbase.html.twig' %}

{% block title %}Edit Messages{% endblock %}

{% block body %}
    <section id="main-content" xmlns="http://www.w3.org/1999/html">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i>Comment Detail</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <h1>Comments</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ comment.id }}</td>
                        </tr>
                        <tr>
                            <th>Subject</th>
                            <td>{{ comment.subject }}</td>
                        </tr>
                        <tr>
                            <th>Comment</th>
                            <td>{{ comment.comment }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ comment.status }}</td>
                        </tr>
                        <tr>
                            <th>Ip</th>
                            <td>{{ comment.ip }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ comment.userid }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Rate</th>
                            <td>{{ comment.rate }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('admin_comment_index') }}"><button type="button" class="btn btn-theme02">Back to list</button></a>

                    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"><button type="button" class="btn btn-theme03">Edit </button></a>

                    {{ include('admin/comment/_delete_form.html.twig') }}
                </div>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
    </div>
{% endblock %}
