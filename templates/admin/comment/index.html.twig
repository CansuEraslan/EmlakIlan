{% extends 'adminbase.html.twig' %}

{% block title %}Edit Messages{% endblock %}

{% block body %}
    <section id="main-content" xmlns="http://www.w3.org/1999/html">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i>Comments</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <h1>Comments List</h1>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Subject</th>
                            <th>Comment</th>
                            <th>Status</th>
                            <th>Ip</th>
                            <th>Userid</th>
                            <th>House</th>
                            <th>Created_at</th>
                            <th>Rate</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.subject }}</td>
                                <td>{{ comment.comment }}</td>
                                <td>{{ comment.status }}</td>
                                <td>{{ comment.ip }}</td>
                                <td><a href="{{ path('admin_user_show', {'id': comment.id}) }}">{{ comment.name }}{{ comment.surname }}</a></td>
                                <td><a href="{{ path('admin_house_show', {'id': comment.id}) }}">{{ comment.title }}</a></td>
                                <td>{{ comment.created_at}}</td>

                                <td>{{ comment.rate }}</td>
                                <td>
                                    <a href="{{ path('admin_comment_show', {'id': comment.id}) }}"><button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button></a>
                                    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
    </div>
{% endblock %}
