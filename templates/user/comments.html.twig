{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}
    <section class="breadcumb-area bg-img" style="background-image: url({{ asset('assets') }}/home/img/bg-img/hero1.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-content">
                        <h3 class="breadcumb-title">User Comment List</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="south-blog-area section-padding-100">
        <div class="container">
            <div class="row">

                <div class="col-12 col-lg-8">
                    <div class="single-blog-area mb-50">
                        <div class="single-blog-area mb-50">
                            <!-- Post Thumbnail -->
                            <table class="table">
                                <thead>
                                <tr>

                                    <th>Subject</th>
                                    <th>Comment</th>
                                    <th>Status</th>


                                    <th>House</th>
                                    <th>Created_at</th>
                                    <th>Rate</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for comment in comments %}
                                    <tr>

                                        <td>{{ comment.subject }}</td>
                                        <td>{{ comment.comment }}</td>
                                        <td>{{ comment.status }}</td>


                                        <td nowrap><a href="{{ path('house_show', {'id': comment.houseid}) }}">{{ comment.title }}</a></td>
                                        <td>{{ comment.created_at}}</td>

                                        <td>{{ comment.rate }}</td>
                                       <td>
                                           <a href="" class="btn btn-danger">Delete</a>

                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>


                        </div>
                    </div>

                {{ include('user/usermenu.html.twig') }}
            </div>
        </div>
    </section>


{% endblock %}
