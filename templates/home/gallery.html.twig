{% extends 'homebase.html.twig' %}

{% block title %}Contact | {{ setting[0].title }}{% endblock %}
{% block keywords %}{{ setting[0].keywords }}{% endblock %}
{% block descriptions %}{{ setting[0].description }}{% endblock %}

{% block body %}
    <!-- ##### Breadcumb Area Start ##### -->
    <section class="breadcumb-area bg-img" style="background-image: url({{ asset('assets') }}/home/img/bg-img/hero1.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-content">
                        <h3 class="breadcumb-title">Ilanlar</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcumb Area End ##### -->
    <section class="south-contact-area section-padding-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
    <div class="row">
        {% for rs in houses %}
            <!-- Single Featured Property -->
            <div class="col-12 col-md-6 col-xl-4">
                <div class="single-featured-property mb-50 wow fadeInUp" data-wow-delay="100ms">
                    <!-- Property Thumbnail -->
                    <div class="property-thumb">
                        <a href="{{ path ('house_show',{'id':rs.id}) }}">
                            <img src="{{ asset('uploads/images/'~ rs.image) }}" alt="" style=" height:250px ;width:1000px ">

                            <div class="tag">
                                <span>For Sale</span>
                            </div>
                            <div class="list-price">
                                <p>{{ rs.price}} TL</p>
                            </div>
                        </a>
                    </div>
                    <!-- Property Content -->
                    <div class="property-content">
                        <h5>{{rs.title}}</h5>
                        <p class="location"><img src="{{ asset('assets') }}/home/img/icons/location.png" alt="">{{rs.address}}</p>
                        <p>{{rs.description}}</p>
                        <div class="property-meta-data d-flex align-items-end justify-content-between">
                            <div class="new-tag">
                                <img src="{{ asset('assets') }}/home/img/icons/new.png" alt="">
                            </div>
                            <div class="bathroom">
                                <img src="{{ asset('assets') }}/home/img/icons/bathtub.png" alt="">
                                <span>{{rs.banyo}}</span>
                            </div>
                            <div class="garage">
                                <img src="{{ asset('assets') }}/home/img/icons/garage.png" alt="">
                                <span>{{rs.oda}}</span>
                            </div>
                            <div class="space">
                                <img src="{{ asset('assets') }}/home/img/icons/space.png" alt="">
                                <span>{{rs.m2 }} m2</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
    </div>
            </div>
        </div>
    </section>

{% endblock %}
