{% extends 'homebase.html.twig' %}

{% block title %}Ilanlar | {{ setting[0].title }}{% endblock %}
{% block keywords %}{{ setting[0].keywords }}{% endblock %}
{% block descriptions %}{{ setting[0].description }}{% endblock %}

{% block body %}
    <!-- ##### Breadcumb Area Start ##### -->
    <section class="breadcumb-area bg-img" style="background-image: url({{ asset('assets') }}/home/img/bg-img/hero1.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-content">
                        <h3 class="breadcumb-title">Iletişim</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcumb Area End ##### -->

    <section class="south-contact-area section-padding-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="contact-heading">
                        <h6>Iletişim</h6>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-4">
                    <div class="content-sidebar">
                        <!-- Address -->
                        <div class="address mt-30">
                            {{ setting[0].contact | raw }}

                        </div>
                    </div>
                </div>

                <!-- Contact Form Area -->
                <div class="col-12 col-lg-8">
                    <div class="contact-form">
                        <h1>İLETİŞİM FORM</h1>
                        {{ include('messages.html.twig') }}
                        <div class="col-auto">

                        </div>
                        <form name="messages" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" name="messages[name]" id="messages_name" placeholder="Isim">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="messages[email]" id="messages_email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="messages[subject]" id="messages_subject" placeholder="Konu">
                            </div>
                             <div class="form-group">
                                <textarea class="text" name="messages[message]" id="messages_message" cols="30" rows="10" placeholder="Mesaj"></textarea>
                            </div>

                            <input type="hidden" name="token" value="{{ csrf_token('form-message') }}"/>
                            <button type="submit" class="btn south-btn">Mesaj Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
